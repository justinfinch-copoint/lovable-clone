# =============================================================================
# Phaser Game Generator - Agent Service Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env with real API keys to source control!

# =============================================================================
# AI Service Configuration
# =============================================================================

# OpenAI API Configuration (Required for Semantic Kernel fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Configuration (Required for Claude Code SDK)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Service Configuration
# =============================================================================

# Chainlit Configuration
CHAINLIT_AUTH_SECRET=your_chainlit_secret_here
CHAINLIT_PORT=8000

# FastAPI Configuration
API_PORT=8001
API_HOST=0.0.0.0

# =============================================================================
# AI Model Configuration
# =============================================================================

# Default AI model to use
DEFAULT_MODEL=gpt-4o-mini

# Claude model for Claude Code SDK
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# AI generation settings
MAX_TOKENS=4000
TEMPERATURE=0.7

# =============================================================================
# File System Configuration
# =============================================================================

# Directory for generated games
OUTPUT_DIR=./generated_games

# Path to Claude Code executable (optional, auto-detected if not specified)
CLAUDE_CODE_PATH=

# =============================================================================
# CORS and Security Configuration
# =============================================================================

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# =============================================================================
# Development Configuration
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode for development
DEBUG=false

# =============================================================================
# Optional: Advanced Configuration
# =============================================================================

# Maximum number of turns for Claude Code generation
MAX_TURNS=10

# Timeout for AI requests (in seconds)
REQUEST_TIMEOUT=60

# Enable/disable specific features
ENABLE_CLAUDE_CODE=true
ENABLE_FILE_OPERATIONS=true
ENABLE_PHASER_TOOLS=true

# =============================================================================
# Example Values (for reference)
# =============================================================================
# OPENAI_API_KEY=sk-1234567890abcdef...
# ANTHROPIC_API_KEY=sk-ant-api03-1234567890abcdef...
# CHAINLIT_AUTH_SECRET=your-secret-key-for-chainlit-sessions
# OUTPUT_DIR=/custom/path/to/generated/games
# ALLOWED_ORIGINS=https://your-production-domain.com,http://localhost:3000